{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"lib": ["ES2022", "webworker", "DOM"],
		"strict": true,
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vite/client"],
		"noEmit": true
	},
	"include": [
		"src/types/global.d.ts",
		"src/types/vite-env.d.ts",
		"src/**/*"
	],
	"exclude": ["node_modules"]
}
